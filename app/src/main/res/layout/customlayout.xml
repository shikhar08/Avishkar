<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <LinearLayout
        android:background="#F44336"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:text="ID:"
            android:fontFamily="Coming Soon"/>

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ID_of_doctor"
            android:fontFamily="Coming Soon"/>

    </LinearLayout>

    <LinearLayout
        android:background="#A62C23"
        android:textColor="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="NAME:"
            android:fontFamily="Coming Soon"/>
        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_of_doctor"
            android:fontFamily="Coming Soon"/>

    </LinearLayout>

    <LinearLayout
        android:background="#F44336"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/specialization"
            android:text="SPECIALISATION:"
            android:fontFamily="Coming Soon"/>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specialisation_of_doctor"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#A62C23"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qualification"
            android:text="QUALIFICATION:"
            android:fontFamily="Coming Soon"/>

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/qualifications"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Coming Soon"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:background="#F44336"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressss"
            android:text="ADDRESS:"
            android:fontFamily="Coming Soon"/>

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/address"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Coming Soon"/>
    </LinearLayout>

    <LinearLayout
        android:background="#A62C23"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:text="Timings:"/>
        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starthour"
            android:fontFamily="Coming Soon"/>
        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startminute"
            android:fontFamily="Coming Soon"/>


        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to"
            android:text="TO"
            android:fontFamily="Coming Soon"/>

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endhour"
            android:fontFamily="Coming Soon"/>

        <TextView
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endminute"
            android:fontFamily="Coming Soon"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#F44336"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:fontFamily="Coming Soon"/>


</LinearLayout>
</LinearLayout>
